{
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "dist",
      "sourceMap": false,
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "allowJs": false,
      "strict": true,
      "noUnusedLocals": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "removeComments": false,
      "jsx": "preserve",
      "lib": ["esnext", "dom"],
      "types": ["node"],
      "rootDir": ".",
      "paths": {
        "@ChenZL/utils": ["packages/utils/src"],
        "@ChenZL/storage": ["packages/storage/src"],
        "@ChenZL/vue-hooks": ["packages/vue-hooks/src"],
        "@ChenZL/*": ["packages/*/src"]
      },
    },
    "include": [
      "packages/global.d.ts",
      "packages/*/src"
    ]
}